# Production Environment Configuration for AI News Assistant Backend
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3001
NODE_ENV=production

# AI API Configuration
API_URL=https://your-ai-api-endpoint.com/v1/chat/completions
BEARER_TOKEN=your_production_bearer_token_here

# AI Model Settings
DEFAULT_MODEL=o3
FALLBACK_MODEL=o1-high

# Security Settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Settings - restrict to your extension origins only
ALLOWED_ORIGINS=chrome-extension://your-extension-id,moz-extension://your-firefox-extension-id

# Logging
DEBUG=false

# Optional: Database URL (for future features)
# DATABASE_URL=postgresql://user:password@host:port/database

# Optional: Redis URL (for rate limiting and caching)
# REDIS_URL=redis://user:password@host:port